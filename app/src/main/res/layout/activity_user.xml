<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <Button
        android:id="@+id/createUser"
        android:layout_width="374dp"
        android:layout_height="53dp"
        android:text="@string/navCreateNewUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listOfUsers"
        android:layout_width="410dp"
        android:layout_height="581dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listOfUsersLabel" />

    <TextView
        android:id="@+id/listOfUsersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Users"
        app:layout_constraintEnd_toEndOf="@+id/createUser"
        app:layout_constraintStart_toStartOf="@+id/createUser"
        app:layout_constraintTop_toBottomOf="@+id/createUser" />


</androidx.constraintlayout.widget.ConstraintLayout>