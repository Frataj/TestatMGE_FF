<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardActivity">

    <ImageView
        android:id="@+id/firstPlaceAvatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/firstPlaceInfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/firstPlaceAvatar"
        app:layout_constraintStart_toStartOf="@+id/firstPlaceAvatar"
        app:layout_constraintTop_toBottomOf="@+id/firstPlaceAvatar" />

    <ImageView
        android:id="@+id/secondPlaceAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/firstPlaceAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPlaceInfo"
        app:layout_constraintHorizontal_bias="0.25"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/secondPlaceInfo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/secondPlaceAvatar"
        app:layout_constraintStart_toStartOf="@+id/secondPlaceAvatar"
        app:layout_constraintTop_toBottomOf="@+id/secondPlaceAvatar" />

    <ImageView
        android:id="@+id/thirdPlaceAvatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/secondPlaceInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/firstPlaceAvatar"
        app:layout_constraintTop_toTopOf="@+id/secondPlaceAvatar"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/thirdPlaceInfo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/thirdPlaceAvatar"
        app:layout_constraintStart_toStartOf="@+id/thirdPlaceAvatar"
        app:layout_constraintTop_toBottomOf="@+id/thirdPlaceAvatar" />

    <ListView
        android:id="@+id/otherPlayerList"
        android:layout_width="303dp"
        android:layout_height="320dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPlaceInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>